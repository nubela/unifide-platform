template name="order"
    .container-fluid
        .row-fluid
            .account
                <!--- navbar --->
                .sidebar-nav-fixed
                    ul.unstyled.side-nav
                        a.appnav href="/order"
                            li.side-header | Orders / RSVP
                        a.appnav href="/order"
                            li.container-entry | <span class="icon">v</span> Overview

                <!--- main area --->
                .span12.span-fixed-sidebar.twitter

                    {{{view}}}

template name="order_update"
    .form-holder.well
        form#bizinfo-update-form method="POST" action="{{submit_url}}" data-validate="parsley"
            legend | Update Order

            fieldset
                <!--- hidden fields --->
                > input type="hidden" name="redirect_to" value='{{redirect_url}}'

                .control-group
                    label for="order_status" | Order Status
                    select id="order_status"
                        option | Fresh Order
                        option | Processing
                        option | Shipped
                        option | Cancel Order

                .control-group
                    label id="description" | Order Notes
                    > textarea rows="3" name="description" id="description" placeholder="What does your business do?"

                .control-group
                    button.btn-large.btn.btn-primary.submit-btn#bizinfo-submit-btn | Save

template name="order_table"
    .right-container
        .container-title
            h2
                Orders and RSVP Overview
            p
