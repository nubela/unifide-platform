        table.table-striped.table-hover
            thead
                tr
                    td
                        ID
                    td
                        Item/Event
                    td
                        User
                    td
                        Timestamp
                    td
                        Status
                    td
                        Actions

            tbody
                {{> table_row}}
                {{> table_row}}
                {{> table_row}}
                {{> table_row}}
                {{> table_row}}

        .pagination
            ul
                li.previous
                    a
                        > img src="/media/img/pager/previous.png"
                li.active
                    a | 1
                li
                    a | 2
                li
                    a | 3
                li.next
                    a
                        > img src="/media/img/pager/next.png"


